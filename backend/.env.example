# Base de données PostgreSQL
# Option 1 : URL complète (connexion directe, port 5432)
DATABASE_URL="postgresql://user:password@localhost:5432/signalement_citoyen?schema=public"

# Supabase : utiliser le Session Pooler (port 6543) pour l'app pour éviter de saturer les connexions.
# Dans le dashboard Supabase : Project Settings > Database > Connection string > "Session pooler"
DATABASE_POOLER_URL="postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres"

# Option 2 : Variables séparées (pour db:test et pgAdmin)
# PG_HOST=localhost
# PG_PORT=5432
# PG_USER=postgres
# PG_PASSWORD=yourpassword
# PG_DATABASE=signalement_citoyen
# Supabase Session Pooler : PG_PORT=6543 et host = aws-0-xx.pooler.supabase.com

# Serveur
PORT=3000
NODE_ENV=development

# JWT (à changer en production)
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d
